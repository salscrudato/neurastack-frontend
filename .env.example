# Neurastack Frontend Environment Variables
# Copy this file to .env.local and fill in your API keys

# Backend API URL (optional - defaults to production)
VITE_BACKEND_URL=https://neurastack-server-1.onrender.com

# Travel API Keys for neuraplanner
# TravelPayouts API (Aviasales + Hotellook) - Primary travel data provider
# Sign up at: https://www.travelpayouts.com/
VITE_TP_TOKEN=your_travelpayouts_api_token_here
VITE_TP_MARKER=your_partner_id_here
VITE_TP_HOST=neurastack.com

# Example with actual values (replace with your credentials):
# VITE_TP_TOKEN=1f2b23d7260c7fe41c095ed6bef08107
# VITE_TP_MARKER=636389

# OpenTable API (for restaurant reservations)
# Sign up at: https://platform.otrestaurants.com/
VITE_OPENTABLE_API_KEY=your_opentable_api_key_here

# Firebase Configuration (if using Firebase features)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Development Settings
VITE_ENABLE_MOCK_DATA=true
VITE_DEBUG_MODE=false
